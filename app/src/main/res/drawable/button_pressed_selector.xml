<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- selector가 눌렸을때 @drawable/button01_press 를 보여준다.-->
        <shape ><!--image대신 직접 selector를 그리겠다고 선언한다. -->
            <solid android:color="#11000000"/><!--도형안에 채워질 색을 정의한다.-->
            <stroke android:width="0dp" android:color="#4b4c4c"/><!-- width = 테두리 선의 굴기, color = 테두리 선의 색을 정의한다.-->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp"/><!--각 모서리의 라운드 처리 - 값이 클수록 라운드의 각이 커진다.-->
        </shape>
    </item>
</selector>