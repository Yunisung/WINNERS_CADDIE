<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="3.5dp" android:color="#88606060"/>
            <solid android:color="#ffffff"/>
            <corners android:radius="1dp"/>
            <gradient android:startColor="#dddddd" android:endColor="#ffffff" android:angle="90"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <stroke android:width="2.5dp" android:color="#7c7b7f"/>
            <solid android:color="#88606060"/>
            <corners android:radius="10dp"/>
            <gradient android:startColor="#404040" android:endColor="#202020" android:angle="90"/>
        </shape>
    </item>
</selector>